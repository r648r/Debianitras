Listen 80      # Port HTTP standard
Listen 8080    # Port HTTP alternatif
Listen 8081    # Port HTTP supplémentaire

<IfModule ssl_module>
    Listen 443   # Port HTTPS standard
    Listen 8443  # Port HTTPS alternatif
</IfModule>

Listen 9090    # Port personnalisé
Listen 8888    # Port personnalisé
Listen 3000    # Port personnalisé

Listen 5000    # API ou applications backend
Listen 7000    # Applications diverses

<IfModule mod_gnutls.c>
    # Configuration si le module GnuTLS est activé
    Listen 5443  # Port HTTPS sécurisé avec GnuTLS
</IfModule>
